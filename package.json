{
    "name": "smallworld-magik",
    "displayName": "Smallworld Magik",
    "description": "Smallworld Magik for Visual Studio Code",
    "version": "1.0.1",
    "publisher": "siamz",
    "icon": "images/swmagik.png",
	"keywords": [
		"smallworld",
		"magik",
		"gis_aliases"
	],
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Languages",
        "Snippets",
        "Themes"
    ],
    "activationEvents": [
        "onLanguage:swgis",
        "onLanguage:magik"
    ],
    "main": "./src/extension",
    "contributes": {
        "configuration":{
            "title": "Smallworld GIS path",
            "properties": {
                "Smallworld.gisPath":{
                "type": ["string", "null"],
                "default": "C:/Smallworld/430/product/bin/x86/gis.exe",
                "description": "Specifies the path of gis.exe that the project uses. **USE double backslash '\\' or single foreward slash '/'**"
                }
            }
        },
        "themes": [
            {
                "label": "Smallworld Magik",
                "uiTheme": "vs-dark",
                "path": "./themes/magik.tmTheme"
            }
        ],
        "languages": [
            {
                "id": "magik",
                "aliases": [
                    "Magik",
                    "Smallworld Magik"
                ],
                "extensions": [
                    ".magik",
                    ".msg",
                    ".def"
                ],
                "filenames": [
                    "load_list.txt",
                    "patch_list.txt"
                ],
                "configuration": "./languages/configuration.json"
            },
            {
                "id": "swgis",
                "aliases": [
                    "swgis",
                    "Smallworld GIS"
                ],
                "extensions": [],
                "filenames": [
                    "gis_aliases",
                    "product.def",
                    "module.def",
                    "load_list.txt",
                    "patch_list.txt"
                ],
                "configuration": "./languages/configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "magik",
                "scopeName": "source.magik",
                "path": "./grammars/magik.tmLanguage.json"
            },
            {
                "language": "swgis",
                "scopeName": "source.swgis",
                "path": "./grammars/swgis.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "magik",
                "path": "./snippets/magik.snippets.json"
            }
        ],        

        "commands": [
            {
            "command": "swSessions.runaliases",
            "title": "GIS Run Alias"
            }
        ],
        "menus": {
        "editor/context": [
            {
            "command": "swSessions.runaliases",
            "group": "swGroup@1"
            }
        ]
        }   
    },
    "bugs": {
		"url": "https://github.com/siamz/smallworld-magik-vscode.git/issues",
		"email": "siamz@live.com"
	},
	"homepage": "https://github.com/siamz/smallworld-magik-vscode/tree/master/README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/siamz/smallworld-magik-vscode/tree/master"
	},
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "eslint": "^4.6.1",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
